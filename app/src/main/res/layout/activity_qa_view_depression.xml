<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QAViewDepressionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/aqv_layout_show_title_top"
            android:layout_above="@id/aqv_layout_show_res_bottom">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/aqvd_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dadada"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aqv_layout_show_title_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#8736de"
            android:paddingBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aqvd_tv_qtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="Depression"
                android:textAlignment="center"
                android:textColor="#f9f9f9"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Test"
                android:textAlignment="center"
                android:textColor="#f9f9f9"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/aqv_layout_show_res_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/aqvd_btn_show_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#9A11BAA7"
                android:textColor="#090707"
                android:text="SHOW RESULT"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>